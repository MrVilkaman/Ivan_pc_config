<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">


	<LinearLayout
		android:id="@+id/ll"

		style="@style/LL.H"
		android:padding="8dp">

		<EditText
			android:id="@+id/phonenumber"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:hint="Кому"
			android:inputType="phone"/>

		<ImageButton
			android:id="@+id/choose_contact_add"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@null"
			android:padding="8dp"
			android:src="@android:drawable/ic_input_add"
			android:visibility="gone"
			tools:visibility="visible"/>

		<ImageButton
			android:id="@+id/choose_contact"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@null"
			android:padding="8dp"
			android:src="@android:drawable/ic_menu_search"/>
	</LinearLayout>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/recyclerview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/ll3"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/ll"
		app:layoutManager="LinearLayoutManager"
		app:stackFromEnd="true">
	</android.support.v7.widget.RecyclerView>

	<TextView
		android:id="@+id/empty_content"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:text="@string/not_found_sms"/>

	<LinearLayout
		android:id="@+id/ll3"
		style="@style/LL.H"
		android:layout_above="@+id/ll2"
		android:gravity="right">

		<ImageView
			android:id="@+id/image_attach"
			android:layout_width="128dp"
			android:layout_height="128dp"
			android:visibility="visible"
			tools:visibility="visible"/>

		<Button
			android:id="@+id/attach_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:text="Прикрепить "/>
	</LinearLayout>


	<LinearLayout
		android:id="@+id/ll2"
		style="@style/LL.H"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_gravity="bottom"
		android:background="#fff"
		android:minHeight="@dimen/chat_inputbar_height">

		<ImageView
			android:id="@+id/chat_input_tamplate"
			style="@style/InputBarButton"
			android:src="@android:drawable/ic_input_get"/>

		<ImageView
			android:id="@+id/chat_input_add"
			style="@style/InputBarButton"
			android:src="@android:drawable/ic_input_add"
			android:visibility="gone"
			tools:visibility="visible"/>

		<EditText
			android:id="@+id/chat_input_text"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="4dp"
			android:layout_weight="1"
			android:background="@drawable/chat_inputbar_edittext_bg"
			android:gravity="center_vertical"
			android:hint="Текст сообщения..."
			android:imeOptions="actionSend"
			android:inputType="textMultiLine"
			android:maxLines="4"
			android:minHeight="@dimen/chat_inputbar_edit_height"
			android:paddingBottom="4dp"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:paddingTop="4dp"/>

		<ImageView
			android:id="@+id/chat_input_send"
			style="@style/InputBarButton"
			android:src="@android:drawable/ic_menu_send"
			android:visibility="gone"
			tools:visibility="visible"/>
	</LinearLayout>
</RelativeLayout>